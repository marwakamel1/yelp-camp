<%- include("../partials/header.ejs") %>
<form action="/campgrounds" method="POST">
  <div class="form-group">
    <input type="text" name="name" class="form-control"  placeholder="name">
  </div>
  <div class="form-group">
    <input type="text" name="image" class="form-control"  placeholder="image url">
  </div>
  <div class="form-group">
    <input type="number" step="0.01" min="0.01" name="price" class="form-control"  placeholder="price">
  </div>
  <div class="form-group">
    <textarea  name="description" class="form-control"  placeholder="write here .." rows="3"></textarea>
  </div>

  <button type="submit" class="btn btn-default">Submit</button>
</form>


